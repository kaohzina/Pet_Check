{{#each pet}}
<h1 class="text-center mb-3">{{title}}</h1>
<form action="/api/members" method="POST" class="mb-4">
<div class="form-group">
    <label for="name">Search by Owner</label>
    <input type="text" name="name" class="form-control">
</div>
<div class="form-group">
    <label for="email">Search by pet</label>
    <input type="email" name="email" class="form-control">
</div>
<input style="margin-top: 3vh;" type="submit" value="Add Member" class="btn btn-primary btn-block">
</form>
<h4>Members</h4>
<ul class="list-group">
    {{#each members}}
        <a href="/api/profile" class="btn"><li class="list-group-item">{{this.name}}</li></a>
    {{/each}}
</ul>

<a href="/api/members" class="btn btn-light mt-4">Visit API</a>
  <div class="mt-4 pt-2">
      <input class="btn btn-primary btn-lg" type="Submit" value="Sign Up!" />
  </div>
{{/each}}